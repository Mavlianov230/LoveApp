<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.CalculateFragment">

    <ImageView
        android:id="@+id/image_first"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/pngn" />
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Love Calculator"
        android:textStyle="bold"
        android:textSize="32sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="90dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/text_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="148dp"
        android:layout_gravity="center_horizontal"
        />

    <EditText
        android:id="@+id/edit_firstname"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:hint="You"
        android:textColorHint="@color/black"/>

    <TextView
        android:id="@+id/text_second_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second Name"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="132dp"
        android:layout_gravity="center_horizontal"
        />

    <EditText
        android:id="@+id/edit_secondname"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:hint="Me"
        android:textColorHint="@color/black"/>

    <Button
        android:id="@+id/btn_calculate"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:backgroundTint="#FF0019"
        android:text="Calculate"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_marginTop="38dp"/>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_gravity="center"
        android:layout_marginStart="166dp"
        android:layout_marginTop="90dp"
        android:text="History"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="end"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="146dp"
        android:src="@drawable/baseline_bar_chart_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_gravity="center"
        android:layout_marginEnd="170dp"
        android:layout_marginTop="90dp"
        android:text="Home"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="start"
        android:layout_marginStart="22dp"
        android:layout_marginTop="146dp"
        android:src="@drawable/png" />
</FrameLayout>
</LinearLayout>
